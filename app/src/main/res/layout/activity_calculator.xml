<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="25dp"
    tools:context=".CalculatorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/history"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2" />
            <TextView
                android:id="@+id/currentText"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1" />
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/buttonGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="10dp">
            <Button
                android:id="@+id/clear"
                android:text="C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="70dp"
                android:textColor="#fdad3c"
                android:textSize="12pt"
                android:background="@drawable/my_button_opt"
                android:layout_alignParentStart="true"/>
            <Button
                android:id="@+id/delete"
                android:text="DEL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="70dp"
                android:textSize="12pt"
                android:background="@drawable/my_button_opt"
                android:layout_toEndOf="@id/clear"/>
            <Button
                android:id="@+id/divide"
                android:text="÷"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="70dp"
                android:textSize="12pt"
                android:background="@drawable/my_button_opt"
                android:layout_toEndOf="@id/delete"/>
            <Button
                android:id="@+id/multiply"
                android:text="×"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="70dp"
                android:textSize="12pt"
                android:background="@drawable/my_button_opt"
                android:layout_toEndOf="@id/divide"/>
            <RelativeLayout
                android:id="@+id/numberGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/clear" >
                <Button
                    android:id="@+id/num7"
                    android:text="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="70dp"
                    android:textSize="12pt"
                    android:layout_alignParentStart="true"/>
                <Button
                    android:id="@+id/num8"
                    android:text="8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="70dp"
                    android:textSize="12pt"
                    android:layout_toEndOf="@+id/num7"/>
                <Button
                    android:id="@+id/num9"
                    android:text="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="70dp"
                    android:textSize="12pt"
                    android:layout_toEndOf="@+id/num8"/>
                <Button
                    android:id="@+id/num4"
                    android:text="4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="70dp"
                    android:textSize="12pt"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/num7"/>
                <Button
                    android:id="@+id/num5"
                    android:text="5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="70dp"
                    android:textSize="12pt"
                    android:layout_toEndOf="@+id/num4"
                    android:layout_below="@id/num8"/>
                <Button
                    android:id="@+id/num6"
                    android:text="6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="70dp"
                    android:textSize="12pt"
                    android:layout_toEndOf="@+id/num5"
                    android:layout_below="@id/num9"/>
                <Button
                    android:id="@+id/num1"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="70dp"
                    android:textSize="12pt"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/num4"/>
                <Button
                    android:id="@+id/num2"
                    android:text="2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="70dp"
                    android:textSize="12pt"
                    android:layout_toEndOf="@+id/num1"
                    android:layout_below="@id/num5"/>
                <Button
                    android:id="@+id/num3"
                    android:text="3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="70dp"
                    android:textSize="12pt"
                    android:layout_toEndOf="@+id/num2"
                    android:layout_below="@id/num6"/>
                <Button
                    android:id="@+id/separator"
                    android:text="."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="70dp"
                    android:textSize="12pt"
                    android:layout_toEndOf="@id/num2"
                    android:layout_below="@id/num3"/>
                <Button
                    android:id="@+id/num0"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:height="70dp"
                    android:textSize="12pt"
                    android:layout_alignParentStart="true"
                    android:layout_below="@id/num1"
                    android:layout_toStartOf="@id/separator"/>

            </RelativeLayout>
            <Button
                android:id="@+id/minus"
                android:text="—"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="70dp"
                android:textSize="12pt"
                android:background="@drawable/my_button_opt"
                android:layout_toEndOf="@id/numberGroup"
                android:layout_below="@+id/multiply"/>
            <Button
                android:id="@+id/plus"
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="70dp"
                android:textSize="12pt"
                android:background="@drawable/my_button_opt"
                android:layout_toEndOf="@id/numberGroup"
                android:layout_below="@+id/minus"/>
            <Button
                android:id="@+id/equal"
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:height="70dp"
                android:textSize="12pt"
                android:background="@drawable/my_button_opt_equal"
                android:layout_below="@+id/plus"
                android:layout_toEndOf="@id/numberGroup"
                android:layout_alignBottom="@id/numberGroup"/>
        </RelativeLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>