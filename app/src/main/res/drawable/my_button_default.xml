<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <inset android:insetLeft="4dp" android:insetTop="6dp"
            android:insetRight="4dp" android:insetBottom="6dp">
            <shape>
                <corners android:radius="2dp" />
                <solid android:color="#a4494949"/> />
            </shape>
        </inset>
    </item>

    <item>
        <inset android:insetLeft="4dp" android:insetTop="6dp"
            android:insetRight="4dp" android:insetBottom="6dp">
            <shape android:shape="rectangle">
                <corners android:radius="2dp" />
                <gradient android:startColor="#616b6e" android:centerColor="#616b6e"
                    android:endColor="#616b6e" android:angle="270" android:gradientRadius="2"/>
            </shape>
        </inset>
    </item>
</selector>