<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <inset android:insetLeft="4dp" android:insetTop="6dp"
        android:insetRight="4dp" android:insetBottom="6dp">
        <shape>
            <corners android:radius="2dp" />
            <gradient android:startColor="#b1757676" android:centerColor="#a6575858"
                android:endColor="#a0403f3f" android:angle="270"/>
            <padding android:left="10dp" android:top="10dp"
                android:right="10dp" android:bottom="10dp" />
        </shape>
    </inset>
</item>

<item>
    <inset android:insetLeft="4dp" android:insetTop="6dp"
        android:insetRight="4dp" android:insetBottom="6dp">
        <shape android:shape="rectangle">
            <gradient android:startColor="#FF62667B" android:centerColor="#FF545869"
                android:endColor="#FF535668" android:angle="270"/>
            <corners android:radius="2dp" />
            <padding android:left="8dp" android:top="4dp"
                android:right="8dp" android:bottom="4dp" />
        </shape>
    </inset>
</item>
</selector>